<div class="signup-background">

  <div class="card-signup">
    <h3 class="mb-4">Edite seus dados</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :first_name, label: "Nome", required: true, input_html: { autocomplete: 'given-name', autocapitalize: 'words' } %>
        <%= f.input :last_name, label: "Sobrenome", required: true, input_html: { autocomplete: 'family-name', autocapitalize: 'words' } %>
        <%= f.input :country, label: "País", required: true, input_html: { autocomplete: 'country', autocapitalize: 'characters' } %>
        <%= f.input :state, label: "Estado", required: true, input_html: { autocomplete: 'address-level1', autocapitalize: 'characters' } %>
        <%= f.input :city, label: "Cidade", required: true, input_html: { autocomplete: 'address-level2', autocapitalize: 'words' } %>
        <%= f.input :professional_field, label: "Área Profissional", required: true, as: :select, collection: ["Tecnologia", "Saúde", "Educação", "Engenharias", "Ciências Exatas", "Música, Artes e Design", "Ciências Sociais",  "Comunicação e Informação", "Negócios", "Ciências Biológicas", "Direito", "Outros"], prompt: "Selecione uma área profissional" %>
        <%= f.input :academic_degree, label: "Formação", required: true, input_html: { autocomplete: 'education-level', autocapitalize: 'words' } %>
        <%= f.input :field_of_work, label: "Campo de atuação", as: :select, collection: ["Full-stack", "Front-end", "Back-end", "Product Manager", "UX/UI Designer", "Data Analyst", "Data Engineer", "Data Scientist"]%>
        <%= f.input :programming_language, label: "Principal Linguagem de Programação", as: :select, collection: ["Assembly", "C", "C++", "C#", "Dart", "Delphi/Object Pascal", "Go", "Groovy", "Haskell", "HTML/CSS", "Java", "JavaScript", "Kotlin", "Lua", "MATLAB", "Objective-C", "Perl", "PHP", "PowerShell", "Python", "R", "Ruby", "Rust", "Scala", "Shell", "SQL", "Swift", "TypeScript", "VB.NET", "Outra", "Nenhuma"], prompt: "Selecione a sua principal linguagem de programação" %>
        <%= f.input :mentor, as: :hidden, input_html: { value: params[:type] == "mentor" ? true : false } %>
        <% if params[:type] == "mentor" %>
          <%= f.input :mentor_current_employer, label: "Empresa Atual", input_html: { autocomplete: 'organization', autocapitalize: 'words' } %>
          <%= f.input :years_of_experience, label: "Tempo de experiência", as: :select, collection: ["0 a 1 ano", "2 a 4 anos", "5 a 10 anos", "+ 10 anos"] %>
          <% end %>
        <%= f.input :github, label: "GitHub", input_html: { autocomplete: 'url', autocapitalize: 'none' } %>
        <%= f.input :linkedin, label: "LinkedIn", input_html: { autocomplete: 'url', autocapitalize: 'none' } %>
        <%= f.input :personal_site, label: "Site Pessoal", input_html: { autocomplete: 'url', autocapitalize: 'none' } %>
        <%= f.input :photo, label: "Foto", as: :file %>
        <%= f.input :other_info, label: "Outras Informações", as: :text %>
        <%= f.input :current_password,
                    label: "Insira a sua senha atual para confirmar as alterações",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn button mb-5" %>
      </div>
    <% end %>
    <div class="d-flex gap-3">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Tem certeza?" }, method: :delete, class: "btn btn-secondary" %>
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>
  </div>
